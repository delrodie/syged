{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vente</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vente.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ vente.date }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ vente.qte }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if vente.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ vente.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ vente.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ vente.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ vente.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vente_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('vente_edit', { 'id': vente.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
